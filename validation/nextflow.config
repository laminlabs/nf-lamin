plugins {
  id 'nf-lamin'
}

// Provide Lamin credentials via environment variables before running:
//   export LAMIN_CURRENT_INSTANCE=your-org/your-instance
//   export LAMIN_API_KEY=your_api_key
//
// Or provide them via the nextflow.config:
// lamin {
//   instance = "your-org/your-instance"
//   api_key = secrets.LAMIN_API_KEY
// }

manifest {
  name = 'nf-lamin validation workflow'
  mainScript = 'main.nf'
}
